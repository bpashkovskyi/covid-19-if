@{
    ViewData["Title"] = "Covid-19 in IF";
}
@model Dictionary<string, Covid19.Models.Entities.TimeSeries>

<div class="text-center">


    @foreach (var (name, timeSeries) in Model)
    {
        <div style="width: 90%;">
            <canvas id="@($"{name}TotalCanvas")"></canvas>
        </div>
        <div style="width: 90%;">
            <canvas id="@($"{name}NewCanvas")"></canvas>
        </div>
    }

<script>
        @foreach (var (name, timeSeries) in Model)
        {
            <text>

                var @($"{name}TotalGraph") = {
            type: 'line',
            data: {
                labels: [@foreach (var day in timeSeries.DaysData)
                         {
                             <text>'</text>
                             @(day.Date.ToString("MMMM dd"))<text>',</text>
                         } ],
                datasets: [
                    {
                        label: 'Total cases',
                        borderColor: 'rgba(0, 0, 0, 0.2)',
                        backgroundColor: 'rgba(0, 0, 0, 0.2)',
                        data: [@foreach (var day in timeSeries.DaysData)
                               {
                                    @(day.TotalCases + ", ")
                               } ],
                        fill: true,
                    },
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'COVID-19 @($"{name}") total cases'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [
                        {
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: 'Day'
                            }
                        }
                    ],
                    yAxes: [
                        {
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: '@($"{name}") total cases'
                            },
                            ticks:
                            {
                            },
                        }
                    ]
                }
            }
        };

        var @($"{name}NewGraph") = {
            type: 'line',
            data: {
                labels: [@foreach (var day in timeSeries.DaysData)
                         {
                             <text>'</text>
                             @(day.Date.ToString("MMMM dd"))<text>',</text>
                         } ],
                datasets: [
                    {
                        label: 'New cases',
                        borderColor: 'rgba(0, 0, 0, 0.2)',
                        backgroundColor: 'rgba(0, 0, 0, 0.2)',
                        data: [@foreach (var day in timeSeries.DaysData)
                               {
                                    @(day.NewCases + ", ")
                               } ],
                        fill: true,
                    },
                    {
                        label: 'Weekly average new cases',
                        borderColor: 'rgba(0, 0, 255, 0.5)',
                        backgroundColor: 'rgba(0, 0, 255, 0.5)',
                        data: [@foreach (var day in timeSeries.DaysData)
                               {
                                   if (day.NewCases != null)
                                   {
                                       @(day.WeeklyNewCases + ", ")
                                   }
                               } ],
                        fill: false,
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'COVID-19 @($"{name}") new cases'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [
                        {
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: 'Day'
                            }
                        }
                    ],
                    yAxes: [
                        {
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: '@($"{name}") new cases'
                            },
                            ticks:
                            {
                            },
                        }
                    ]
                }
            }
        };
            </text>
        }


        window.onload = function() {

            @foreach (var (name, timeSeries) in Model)
            {
                <text>

                    const @($"{name}TotalCtx") = document.getElementById('@($"{name}TotalCanvas")').getContext('2d');
                    window.myLine = new Chart(@($"{name}TotalCtx"), @($"{name}TotalGraph"));

                    const @($"{name}NewCtx") = document.getElementById('@($"{name}NewCanvas")').getContext('2d');
                    window.myLine = new Chart(@($"{name}NewCtx"), @($"{name}NewGraph"));
                </text>
            }

        };
</script>
</div>